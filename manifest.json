{
  // Required
  "manifest_version": 2,
  "name": "Bookie",
  "version": "1.0.0",

  // Recommended
  "description": "A bookmarklet management extension",

  // Pick one (or none)
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  // Optional
  "author": "Fredrik Christenson",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}