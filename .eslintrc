{
  "extends": "eslint:recommended",
  "env": {
    "browser": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error"],
    "space-in-parens": ["error"],
    "no-mixed-spaces-and-tabs": ["error"],
    "space-before-function-paren": ["error", "never"],
    "no-console": 0,
    "quotes": ["error", "single"]
  }
}